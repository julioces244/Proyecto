<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/ic_food_fork_drink"/>

        <TextView
            android:id="@+id/nombre_text"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="MenÃº"/>

        <TextView
            android:id="@+id/precio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/nombre_text"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Precio : S./4.99"/>

        <TextView
            android:id="@+id/comida_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/precio_text"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="Comida: Lasagna"/>

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu_dots"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_alignParentEnd="true"
            android:background="@null"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>
